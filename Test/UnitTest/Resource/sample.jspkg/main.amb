top: VBox {
    message: HBox {
	    logo: Image {
			name: String "logo"
	    }
	    text_a: TextField {
			text: String "This is text field"
	    }
		graphics: Graphics2D {
			draw: Event(context: Int) %{
				let lframe = context.logicalFrame ;
				let x      = lframe.x ;
				let y      = lframe.y ;
				let width  = lframe.width ;
				let height = lframe.height ;
				console.log("[Graphics2D] draw !! in " + x + " , " + y + " of " + context) ;
				context.moveTo(x, y) ;
				context.lineTo(x + width, y + height) ;
			%}
		}

		bitmap: Bitmap {
			draw: Event(context: Int) %{
				console.log("[Bitmap] draw !!") ;
				context.setColor(context.blue) ;
				context.drawPoint(5, 5) ;
			%}
		}
    }
    boxes: HBox {
		checkBox0: CheckBox {
			title:	String "option-0"
			pressed: Event(status: Bool) %{
				console.log("option-0: " + status) ;
			%}
		}
		checkBox1: CheckBox {
			title:	String "option-1"
			status: Bool false
			pressed: Event(status: Bool) %{
				console.log("option-1: " + status) ;
			%}
		}
    }
    table: Table {
		columnCount:	Int	3
		rowCount:		Int	2
		cell: Icon {
			image: String "calendar"
			title: String "calendar"
		}
	make: Event(col: Int, row: Int) %{
		let msg   = "make event: " + col + "," + row ;
		let idx   = row * 2 + col ;
		let image = "?" ;
		switch(idx){
			case 0: image = "bag" ;			break ;
			case 1: image = "book" ; 		break ;
			case 2: image = "calendar" ;	break ;
			case 3: image = "clock" ;		break ;
			case 4: image = "telescope" ;	break ;
			case 4: image = "umblrella" ;	break ;
		}
		console.log(msg) ;
		self.title = msg ;
		self.image = image ;
	%}
        pressed: Event(col:Int, row:Int) %{
		console.log("Table Pressed col=" + col + ", row=" + row) ;
	%}
    }
    button_a: Button {
        title:  String "Go to Second"
        pressed: Event() %{
			console.log("launch button view .. start") ;
			enterView("button_view", function(val){
				console.log("button_view is closed: " + val) ;
			}) ;
        %}
    }
}

